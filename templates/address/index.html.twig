{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}

    <main class="container">
        <section class="mb-3 text-center">
            <h1 class="text-uppercase">mes adresses</h1>
            <a href="{{ path('address_add') }}" class="text-teal font-light">
                <i class="fas fa-plus mr-1"></i> Ajouter une adresse
            </a>
        </section>

        <section class="mb-3">
            {% if addresses|length == 0 %}
                <div class="bg-light text-center py-3 py-md-5 mb-3 mb-md-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                    <p class="font-light mb-0">Aucune adresse disponible.</p>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-12 col-md-8">
                        <div class="row">
                            {% for address in addresses %}
                                <div class="col-6 col-md-4">
                                    <span class="address-alias">{{ address.alias }}</span>
                                    <div class="font-light text-capitalize small">
                                        <p class="mb-1">{{ address.getFullName() }}</p>
                                        <p class="mb-1">{{ address.district }}</p>
                                        <p class="mb-2">{{ address.phone }}</p>
                                        <p>
                                            <a href="{{ path('address_edit', {id: address.id}) }}" class="mr-3">Ã©diter </a>
                                            <a href="{{ path('address_remove', {id: address.id}) }}" class="text-danger">supprimer</a>
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            {% endif %}
        </section>
    </main>

{% endblock %}
