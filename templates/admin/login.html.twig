{% extends 'base_4.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}

    <main>
        <section class="my-5">
            <div class="container">
                <div class="text-center">
                    <h1>Authentification</h1>
                </div>
                <div class="row">
                    <div class="p-4 border bg-light col-12 col-md-6 offset-md-3 rounded">
                        {% if error %}
                            <p class="text-danger font-light text-center">
                                <i class="fas fa-exclamation-triangle mr-1"></i>Authentification échoué... vérifiez vos identifiants !
                            </p>
                        {% endif %}
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-flex justify-content-center mt-5 mb-4">
                            <button type="submit" class="btn btn-block btn-primary w-50">Connexion</button>
                        </div>
                        {{ form_end(form) }}
                        <a href="{{ path('home') }}">
                            <i class="fa fa-long-arrow-alt-left mr-1"></i>Retour vers le site
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}