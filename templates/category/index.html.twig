{% extends 'base_3.html.twig' %}

{% block body %}

    <main class="container pt-3 pt-md-0">
        <h1 class="text-center mb-3 text-uppercase">Gestion des catégories</h1>
        {% include('partials/flash.html.twig') %}
        <div class="card">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h4 class="font-poppins mb-0">
                    <i class="fas fa-sitemap mr-1"></i>Catégories
                </h4>
                <a href="{{ path('category_add') }}" class="btn btn-light text-capitalize">
                    <i class="fas fa-plus mr-1"></i>Nouvelle Catégorie
                </a>
            </div>
            <div class="card-body table-responsive ">
                <table class="table border-bottom text-center mb-0">
                    <thead class="thead-light">
                    <tr>
                        <th>Nom</th>
                        <th>Collections</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{ path('category_edit', {id: category.id}) }}">{{ category.name|capitalize }}</a></td>
                            <td>{{ category.collections|length }}</td>
                            <td>
                                <a href="{{ path('category_edit', {id: category.id}) }}" class="text-info">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

{% endblock %}