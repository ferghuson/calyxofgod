{% extends 'base_3.html.twig' %}

{% block body %}

    <main class="container pt-3 pt-md-0">
        <h1 class="text-center mb-3 text-uppercase">Gestion des collections</h1>
        {% include('partials/flash.html.twig') %}
        <div class="card">
            <div class="card-header bg-secondary d-flex justify-content-between align-items-center">
                <h4 class="font-poppins text-white mb-0">
                    <i class="fas fa-box mr-1"></i>Collections
                </h4>
                <a href="{{ path('collection_add') }}" class="btn btn-light text-capitalize">
                    <i class="fas fa-plus mr-1"></i>Nouvelle Collection
                </a>
            </div>
            <div class="card-body table-responsive ">
                <table class="table border-bottom text-center mb-0">
                    <thead class="thead-light">
                    <tr>
                        <th>Cat√©gorie</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Produits</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for collection in collections %}
                        <tr>
                            <td>{{ collection.category.name|capitalize }}</td>
                            <td>
                                <a href="{{ path('collection_edit', {id: collection.id}) }}">
                                    {{ collection.name|capitalize }}
                                </a>
                            </td>
                            <td>{{ collection.description }}</td>
                            <td>{{ collection.products|length }}</td>
                            <td>
                                <a href="{{ path('collection_edit', {id: collection.id}) }}" class="text-info">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

{% endblock %}