{% extends 'base_3.html.twig' %}

{% block body %}

    <main class="container pt-3 pt-md-0">
        <h1 class="text-center text-uppercase mb-3">gestion des clients</h1>

        <section class="row">
            <div class="col-md-1"></div>
            <div class="col-12 col-md-10">
                <div class="card">
                    <div class="card-header bg-purple">
                        <h4 class="font-poppins mb-0">
                            <i class="fas fa-users mr-1"></i>Clients
                        </h4>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table border-bottom mb-0">
                            <thead class="bg-light text-center">
                            <tr>
                                <th>Nom</th>
                                <th>Téléphone</th>
                                <th>Email</th>
                                <th>Commandes</th>
                                <th>Inscription</th>
                            </tr>
                            </thead>
                            <tbody class="font-light text-center">
                            {% for customer in customers %}
                                <tr>
                                    <td class="text-capitalize text-nowrap">
                                        <a href="{{ path('customer_details', {id: customer.id}) }}">
                                            {{ customer.title~' '~customer.getFullName() }}
                                        </a>
                                    </td>
                                    <td class="text-nowrap">{{ customer.phone }}</td>
                                    <td class="text-nowrap">{{ customer.email }}</td>
                                    <td>{{ customer.commands|length }}</td>
                                    <td>{{ customer.registeredAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </section>
    </main>

{% endblock %}