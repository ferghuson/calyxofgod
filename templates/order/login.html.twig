{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <main class="container pt-3">
        <section class="text-center">
            <h1 class="text-uppercase text-center">connexion</h1>
            <p class="font-light">
                Vous êtes un nouveau client ? <a href="{{ path('order_register') }}" class="text-primary text-nowrap">Créer un compte</a>
            </p>
        </section>

        <section class="row mb-3">
            <div class="col-12 col-md-6 offset-md-3">
                {% if error %}
                    <p class="text-danger text-center font-light">
                        <i class="fas fa-exclamation-triangle mr-1"></i>Authentification échoué... vérifiez vos identifiants !
                    </p>
                {% endif %}
                {% include 'customer/login-form.html.twig' %}
            </div>
        </section>
    </main>

{% endblock %}
