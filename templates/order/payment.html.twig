{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <!-- BREADCRUMB -->
    <section class="bg-light text-center">
        <div class="container">
            <ol class="breadcrumb mb-4 rounded-0 d-none d-md-flex justify-content-center bg-light">
                <li class="breadcrumb-item">
                    <a href="{{ path('cart_index') }}" class="font-light text-teal">Panier</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('order_address') }}" class="font-light text-teal">Livraison</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('order_payment') }}" class="font-light text-muted">Paiement</a>
                </li>
            </ol>
        </div>
    </section>

    <main class="container">
        <section class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <section class="row">
                    <div class="col-12 col-md-7 mb-3 mb-md-5">
                        <h2>Mode de paiement</h2>
                        <section>
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="text-center">
                                <button type="submit" class="btn bg-teal rounded-0 text-white">
                                    Finaliser l'achat
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </section>
                    </div>
                    <div class="col-12 col-md-5 mb-4">
                        <div class="py-3 px-2 bg-light">
                            <div class="font-light d-flex justify-content-between">
                                <div><span class="mr-1">{{ items }}</span>{% if items > 1 %}produits{% else %}produit{% endif %}</div>
                                <div>{{ total|number_format(null, null, ' ') }}F</div>
                            </div>
                            <hr>
                            <div class="font-light d-flex justify-content-between">
                                <div>Livraison</div>
                                <div>?</div>
                            </div>
                            <hr>
                            <div class="sub-total d-flex justify-content-between">
                                <div>Total</div>
                                <div>{{ total|number_format(null, null, ' ') }}F</div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-1"></div>
        </section>
    </main>
{% endblock %}