{% for label, messages in app.flashes %}

    <div class="container alert alert-{{ label }} alert-dismissible">
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        {% for message in messages %}
            <p class="mb-0 text-dark font-light">
                <i class="fas fa-check text-{{ label }} mr-1"></i>{{ message | raw }}
            </p>
        {% endfor %}
    </div>

{% endfor %}