{% extends 'base_3.html.twig' %}

{% block body %}

    <main class="container">
        <h2 class="text-center mb-3 text-uppercase">Modification d'un produit</h2>
        <section class="row">
            <div class="col-12 col-md-8 offset-md-2 py-3 rounded shadow">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="collection">Collection</label>
                    <select class="form-control" name="collection">
                        <option value="{{ product.section.id }}">{{ product.section.name }}</option>
                        {% for collection in collections %}
                            {% if collection.id != product.section.id %}
                                <option value="{{ collection.id }}">{{ collection.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                {{ form_widget(form) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary py-2 px-3">Enregistrer les modifications</button>
                </div>
                {{ form_end(form) }}
            </div>
        </section>
    </main>

{% endblock %}
